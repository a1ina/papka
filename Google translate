                 <script>
            jQuery(window).on('load', function(){
                jQuery('body').css('top', '0');
                jQuery('.notranslate').click(function () {
                    jQuery('body').css('top', '0');
                });

                if ( jQuery("html").hasClass("translated-ltr") ) {
                    jQuery('.rus_lang').css('opacity', '0.5');
                    jQuery('.eng_lang').css('opacity', '1');
                }
                else{
                    jQuery('.rus_lang').css('opacity', '1');
                    jQuery('.eng_lang').css('opacity', '0.5');
                }

                jQuery('.rus_lang').click(function () {
                    jQuery('.rus_lang').css('opacity', '1');
                    jQuery('.eng_lang').css('opacity', '0.5');
                })
                jQuery('.eng_lang').click(function () {
                    jQuery('.rus_lang').css('opacity', '0.5');
                    jQuery('.eng_lang').css('opacity', '1');
                })
            })
        </script>
